<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".HitungKubus">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/kubus" />

            <EditText
                android:id="@+id/SisiLPermukaanKubus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Masukkan Sisi"
                android:inputType="numberDecimal"
                android:textColorHint="@android:color/black"
                android:textSize="20dp"
                android:textColor="@android:color/black"/>

            <Button
                android:id="@+id/HitungLPermukaanKubus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_blue_light"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Hitung Luas Permukaan!"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/hasilLPermukaanKubus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HASIL PERHITUNGAN LUAS PERMUKAAN"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/black"/>

            <EditText
                android:id="@+id/SisiVolumeKubus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Masukkan Sisi"
                android:inputType="numberDecimal"
                android:textColorHint="@android:color/black"
                android:textSize="20dp"
                android:textColor="@android:color/black"/>

            <Button
                android:id="@+id/HitungVolumeKubus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_blue_light"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Hitung Volume!"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/hasilVolumeKubus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HASIL PERHITUNGAN VOLUME"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/black"/>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>